<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Donate for 2019-nCoV</title>
  <link rel="icon" href="favicons/favicon.ico">
  <link rel="stylesheet" href="css/bootstrap.css">
  <link rel="stylesheet" href="css/style.css">
</head>
<body>

  <div class="container">
    <h1 class="">Donation History <sup></sup></h1>
    <hr>

      <table class="mb-5 mt-3 table-responsive-md table-hover" style="min-width: 100%;">
        <thead>
          <tr>
            <th class="text-center">#</th>
            <th class="text-center">Timestamp</th>
            <th class="text-center">Name</th>
            <th class="text-center">Email</th>
            <th class="text-center">Grade</th>
            <th class="text-center">Payment Method</th>
            <th class="text-center">Amount Donated</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < dataList.length; i++) { %>
            <tr>
              <td><%= dataList[i].serial %></td>
              <td><%= dataList[i].timeStamp %></td>
              <td><%= dataList[i].displayName %></td>
              <td><%= dataList[i].displayEmail %></td>
              <td><%= dataList[i].displayGrade %></td>
              <td><%= dataList[i].displayPaymentMethod %></td>
              <td><%= "Â¥" + dataList[i].donationAmount %></td>
            </tr>
          <% } %>
        </tbody>
      </table>


    <button class="btn btn-primary mt-0 mb-0" onclick="window.history.back()">Back</button>

  </div>
